{
  "root": true,
  "extends": ["next/core-web-vitals"],
  "plugins": ["testing-library", "jest"],
  "overrides": [
    {
      "files": [
        "**/__tests__/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test).[jt]s?(x)"
      ],
      "extends": ["plugin:testing-library/react"]
    }
  ],
  "env": {
    "jest": true
  },
  "rules": {
    "jest/no-focused-tests": "error"
  }
}
